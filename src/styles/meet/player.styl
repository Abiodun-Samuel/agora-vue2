
.sender{
 width: 100%;
  height: 35vh
}

.sender > :first-child{
  border-radius: 5px !important
}
.sender__icons{
  margin: 5px 0 20px 0;
}

.player {
  position: relative
  display: grid
  grid-gap: 20px
  // margin: 5px 0
  grid-template-columns: repeat(auto-fit, minmax(150px, 1fr))
  min-height: auto
  height: 35vh
}

.player>.user-vision {
  background-color: #333
  border-radius: 5px !important
   height: 35vh
   margin: 10px 0
}
.player .user-vision {
  position: relative
}
.player .user-vision .player-vision {
  width: 100%;
  height: 35vh
}

.player .user-vision .player-vision > :first-child{
  border-radius: 5px !important
}

.player .user-vision .ban {
  z-index: 2;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: absolute;
  bottom: -25px;
  right: 0
  left: 0
  // margin: 15px 0; 
  padding: 2px 
  flex-direction: row;
  background-color: #ffffff;
}
.player .user-vision .ban p {
  position: relative;
  margin: 2px 0;
  font-size: 11px;
  word-break: break-all;
  white-space: nowrap;
  color: #242424
}

.player .user-vision .central {
  position: absolute;
  top: 0px;
  right: 0px;
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 2px;
  border-radius: 10px;
  opacity: 1;
  transition: opacity 0.3s linear;
}
.player .user-vision:hover .central {
  opacity: 1;
  z-index: 2;
}
