.player {
  position: relative
  display: grid
  grid-gap: 15px
  grid-template-columns: repeat(auto-fit, minmax(150px, 1fr))
  min-height: auto
  height: 40vh
  border-radius: 10px !important

}
.player-vision > div{
  border-radius: 10px !important
}

.player>.user-vision {
  background-color: #333
}
.player .user-vision {
  position: relative

}
.player .user-vision .player-vision {
  width: 100%;
   height: 40vh
  border-radius: 10px !important
  // width: 100%;
  // height: 100%;
}
.player .user-vision .ban {
  z-index: 2;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  bottom: 0;
  padding: 2px 
  flex-direction: row;
  cursor: pointer;
  background-color: rgba(0, 0, 0, 0.4);
}
.player .user-vision .ban p {
  position: relative;
  margin: 2px 0;
  font-size: 8px;
  word-break: break-word;
  white-space: nowrap;
  color: #ffffff
}

.player .user-vision .central {
  position: absolute;
  top: 0px;
  right: 0px;
  display: flex;
  align-items: center;
  justify-content: space-around;
  // transform: translate(-50%, -50%);
  padding: 5px;
  // background-color: rgba(210,210,210,0.8);
  border-radius: 10px;
  opacity: 1;
  transition: opacity 0.3s linear;
}
.player .user-vision:hover .central {
  opacity: 1;
  z-index: 2;
}
